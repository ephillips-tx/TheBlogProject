@using TheBlogProject.ViewModels
@model ContactMe

@{
    ViewData["Title"] = "Contact";
}

<section class="miri-ui-kit-section">
    <form asp-action="Contact">
        <div class="row">
            <div class="form-group col-md-6 pb-2 mb-4">
                <label asp-for="Name"></label>
                <input asp-for="Name" type="text" class="form-control" placeholder="Name">
            </div>
            <div class="form-group col-md-6 pb-2 mb-4">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="text" class="form-control" placeholder="Email Address">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6 pb-2 mb-4">
                <label asp-for="Subject"></label>
                <input asp-for="Subject" type="text" class="form-control" placeholder="Subject">
            </div>
            <div class="form-group col-md-6 pb-2 mb-4">
                <label asp-for="Phone"></label>
                <input asp-for="Phone" type="tel" class="form-control" placeholder="Phone Number">
            </div>
        </div>
        <div class="row">
            <div class=" form-group col-12 pb-2 mb-4">
                <label asp-for="Message"></label>
                <textarea asp-for="Message" class="form-control" id="Message" cols="30" rows="10"></textarea>
            </div>
        </div>
        <div class="d-flex align-items-center"> 
            <button type="submit" class="btn btn-dark" id="sendMessageButton">Send Message</button>
            <small class="ml-4 d-inline-block">By submitting this form you agree <br> with our Privacy Policy</small>
        </div>
    </form>
</section>


@section Scripts{

    <script>
        // Default font size but not for placeholder
        $('#Message').summernote({
            placeholder: "Message"
        });
    </script>

}